<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="blacklist"
    android:background="#ccde"
    tools:context="ttdn.com.blockcaller.fragments.BlackListFragment">

    <RelativeLayout
        android:id="@+id/relative_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtViewInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_help_blacklist"
           />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="UnknownId">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyview_fragment_blacklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clipToPadding="false"/>
    </RelativeLayout>

</RelativeLayout>
